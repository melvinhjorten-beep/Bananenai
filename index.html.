<body>

    <h1>SHULULU! üçå</h1>
    <button id="banana-btn">üçå</button>
    <div class="status" id="status">TRYCK P√Ö BANANEN!</div>
    <div id="response-text"></div>

    <script>
        const btn = document.getElementById('banana-btn');
        const status = document.getElementById('status');
        const responseDiv = document.getElementById('response-text');

        // DIN NYCKEL OCH INSTRUKTIONER
        const API_KEY = 'Sk-proj-ZEK_tvCQThv5ZaghicrtZBBlyS2qwvnelATKIgt_H941jr1D4Pjv5D5hbJPhXqms42JmRyPGSkT3BlbkFJANwfgvSvEJvO0dwVoyvmkY8rNhXhyJra8JUXwAyTjppGv7phNr4i401eDfYI-X8Y56mo2son0A'; 
        const BANAN_LOGIC = "Du √§r Sean Banan. Svara kort (max 2-3 meningar), galet och med extremt mycket energi. Anv√§nd ord som Shululu, Kingen, Guss, Rumpa, Knas och Magiskt. Du √§lskar bananer och hatar tr√•kiga saker. Avsluta med n√•got bananigt!";

        // KOLLA R√ñST-ST√ñD
        const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        if (!SpeechRecognition) {
            alert("Tyv√§rr, din iPad √§r f√∂r gammal f√∂r r√∂stigenk√§nning i webbl√§saren!");
        }
        const recognition = new SpeechRecognition();
        recognition.lang = 'sv-SE';

        // LYSSNA
        btn.onclick = () => {
            recognition.start();
            status.innerText = "LYSSNAR... SNACKA P√Ö!";
            btn.classList.add('listening');
        };

        recognition.onresult = async (event) => {
            btn.classList.remove('listening');
            const userSpeech = event.results[0][0].transcript;
            status.innerText = "T√ÑNKER UT KNAS...";

            try {
                // SKICKA TILL OPENAI
                const response = await fetch('https://api.openai.com/v1/chat/completions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${API_KEY}`
                    },
                    body: JSON.stringify({
                        model: "gpt-4o-mini",
                        messages: [
                            { role: "system", content: BANAN_LOGIC },
                            { role: "user", content: userSpeech }
                        ]
                    })
                });

                const data = await response.json();
                const aiSvar = data.choices[0].message.content;
                
                responseDiv.innerText = aiSvar;
                status.innerText = "SKAKAR RUMPA!";
                
                prata(aiSvar);

            } catch (error) {
                status.innerText = "KNAS! Funkar inte...";
                console.error(error);
            }
        };

        // PRATA (iPad-talsyntes)
        function prata(text) {
            // Rensa gamla r√∂ster
            window.speechSynthesis.cancel();
            
            const msg = new SpeechSynthesisUtterance(text);
            msg.lang = 'sv-SE';
            
            // Sean Banan-inst√§llningar p√• r√∂sten
            msg.pitch = 1.6; // Pipigare r√∂st
            msg.rate = 1.3;  // Snabbare r√∂st
            msg.volume = 1.0;

            window.speechSynthesis.speak(msg);
            
            msg.onend = () => {
                status.innerText = "TRYCK IGEN, KINGEN!";
            };
        }
    </script>
